{
  "name": "apm",
  "productName": "AviUtl Plugin Manager",
  "version": "0.2.0",
  "description": "A plugin manager for AviUtl",
  "main": "./src/main.js",
  "repository": "https://github.com/hal-shu-sato/apm.git",
  "author": "ato lash <hal-shu-sato@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "yarn run lint:eslint",
    "fix:prettier": "yarn run lint:prettier",
    "prepare": "husky install",
    "cm": "npx cz",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "dependencies": {
    "7zip-bin": "^5.1.1",
    "bootstrap": "^5.0.1",
    "electron-dl": "^3.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "fast-xml-parser": "^3.19.0",
    "fs-extra": "^10.0.0",
    "node-7z": "^2.1.2",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "@electron-forge/publisher-github": "^6.0.0-beta.57",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "electron": "^13.1.1",
    "eslint": "^7.28.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^35.1.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "prettier-plugin-md-nocjsp": "^1.1.1",
    "standard-version": "^9.3.0"
  },
  "optionalDependencies": {
    "cz-conventional-changelog-ja": "^0.0.2"
  },
  "config": {
    "forge": "./forge.config.js",
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{ts,tsx,json,yml,md,html,css,scss}": "prettier --write"
  }
}
