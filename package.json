{
  "name": "apm",
  "productName": "AviUtl Plugin Manager",
  "version": "0.1.0",
  "description": "A plugin manager for AviUtl",
  "main": "./src/main.js",
  "repository": "https://github.com/hal-shu-sato/apm.git",
  "author": "ato lash <hal-shu-sato@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "yarn run lint:eslint",
    "fix:prettier": "yarn run lint:prettier",
    "prepare": "husky install",
    "cm": "npx cz"
  },
  "dependencies": {
    "bootstrap": "^5.0.1",
    "electron-dl": "^3.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "electron": "^13.1.1",
    "eslint": "^7.28.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^35.1.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1"
  },
  "optionalDependencies": {
    "cz-conventional-changelog-ja": "^0.0.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "AviUtl-Package-Manager",
        "executableName": "apm",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "apm"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{ts,tsx,json,yml,md,html,css,scss}": "prettier --write"
  }
}
